<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/discoverRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:layout_alignParentTop="true" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="51dp"
        app:cardElevation="3dp"
        android:layout_marginTop="13dp"
        app:cardCornerRadius="0dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="#fff">

        <LinearLayout
            android:id="@+id/bottomTab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/tab1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/tabUnselected"
                android:gravity="center">

                <View
                    android:id="@+id/indicator1"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="invisible"
                    android:background="@color/themeGrey"
                    />

                <ImageView
                    android:id="@+id/icon1"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/home_round"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/tabUnselected"
                android:gravity="center">

                <View
                    android:id="@+id/indicator2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="invisible"
                    android:background="@color/themeGrey"
                    />

                <ImageView
                    android:id="@+id/icon2"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/course_tab"
                    android:padding="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/tabUnselected"
                android:gravity="center">

                <View
                    android:id="@+id/indicator3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="invisible"
                    android:background="@color/themeGrey"
                    />

                <ImageView
                    android:id="@+id/icon3"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/bookmark_round"
                    android:padding="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@color/tabUnselected"
                android:gravity="center">

                <View
                    android:id="@+id/indicator4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:visibility="invisible"
                    android:background="@color/themeGrey"
                    />

                <ImageView
                    android:id="@+id/icon4"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/menu1"
                    android:padding="10dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>